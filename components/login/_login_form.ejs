<form action="/login" method="post" class="grid grid-flow-row">
    <label for="email" class="flex-1 text-left text-teal-900 text-xs font-bold">Adres e-mail</label>
    <input
        type="email"
        name="email"
        id="email"
        placeholder="adres@domena.pl"
        class="bg-white border border-slate-200 text-slate-900 rounded-sm text-sm p-2 w-80 my-1"
        required
    />
    <label for="password" class="flex-1 text-left text-teal-900 text-xs font-bold">Hasło</label>
    <input
        type="password"
        name="password"
        id="password"
        placeholder="Hasło"
        class="bg-white border border-slate-200 text-slate-900 rounded-sm text-sm p-2 w-80 my-1"
        required
    />
    <input
        type="submit"
        value="Zaloguj"
        class="bg-teal-200 border-2 border-teal-700 text-teal-800 rounded-lg py-2 px-4 mt-4 w-52 mx-auto cursor-pointer"
    />
    <p class="text-xs my-3">Nie masz konta? <a class="underline hover:text-teal-300" href="/login/register">Utwórz konto</a></p>
</form>
